<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <h1>Your Orders</h1>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h2>Order ID: <%= order.id %></h2>
                            <ul>
                                <% order.products.forEach(product => { %>
                                    <li>
                                        <strong><%= product.title %></strong> - Quantity: <%= product.orderItem.quantity %> - Price: $<%= product.price %>
                                    </li>
                                <% }) %>
                            </ul>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <h1>Nothing there!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>